{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules/@types/mdx"
  ]
}
